<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#2196F3</item>      <!-- Blue -->
        <item name="colorPrimaryDark">#1565C0</item>  <!-- Dark Blue -->
        <item name="colorAccent">#FF4081</item>       <!-- Pink Accent -->
        <item name="buttonStyle">@style/AppButtonStyle</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
